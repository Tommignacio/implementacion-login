{{> profile}}
<h2>Products</h2>
<div>
    <table>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Code</th>
            <th>Stock</th>
            <th>Category</th>
        </tr>
        <tbody>
            {{#each products}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.code}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.category}}</td>
                    <td><button>Add to Cart</button></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div>
    {{#if prevPage}}
        <a href='/views/products?page={{prevPage}}'>Previous</a>
    {{/if}}

    {{#if nextPage}}
        <a href='/views/products?page={{nextPage}}'>Next</a>
    {{/if}}
</div>

<p>Page: {{currentPage}} / {{totalPages}}</p>