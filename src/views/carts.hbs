<h2>cart: {{cartId}}</h2>
<div>
    <table>
        <tr> 
            <th>ID</th>
            <th>Title</th>
            <th>Description</th> 
            <th>Price</th> 
            <th>Code</th> 
            <th>Stock</th> 
            <th>Category</th> 
        </tr>
        <tbody>
            {{#each products}}
                <tr>
                    <td>{{this.product._id}}</td>
                    <td>{{this.product.title}}</td>
                    <td>{{this.product.description}}</td>
                    <td>{{this.product.price}}</td>
                    <td>{{this.product.code}}</td>
                    <td>{{this.product.stock}}</td>
                    <td>{{this.product.category}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
<div>
    {{#if prevPage}}
        <a href="/views/carts?page={{prevPage}}">Previous</a>
    {{/if}}

    {{#if nextPage}}
        <a href="/views/carts?page={{nextPage}}">Next</a>
    {{/if}}
</div>

<p>Page: {{currentPage}} / {{totalPages}}</p>

